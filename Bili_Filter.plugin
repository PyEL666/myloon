[Plugin]
name = BiliPlayFilter
desc = 过滤首页推荐低播放量视频
version = 1.0
scriptings = bili_filter.js
icons = https://fastly.jsdelivr.net/gh/PyEL666/icons@main/bili.png

[Rule]
DOMAIN,app.bilibili.com,script

[Script]
http-response ^https?:\/\/app\.bilibili\.com\/x\/v2\/feed\/index script-path=https://raw.githubusercontent.com/PyEL666/myloon/refs/heads/main/bili_filter.js, requires-body=true, tag=BiliPlayFilter

[Argument]
minplay = 300000  # 默认过滤低于 10 万播放